#!/usr/bin/env ruby
require "bundler"
Bundler.require

$LOAD_PATH.unshift File.expand_path("../../lib", __FILE__)
Dir.glob("lib/**/*.rb").map{|path| path.sub("lib/", "")}.map{|path| path.sub(".rb", "")}.each{|fname| require fname}

require "logger"
DB = Sequel.connect(ENV["DATABASE_URL"] || "postgresql:///#{ENV["USER"]}", logger: Logger.new(STDERR))

require "irb"
IRB.start(__FILE__)
